<idea-plugin>
  <id>XinYaApiUpload</id>
  <name>XinYaApiUpload</name>
  <version>1.0.2</version>
  <vendor email="xinyartech@163.com" url="http://www.xinyartech.com">QBB</vendor>

  <description><![CDATA[
      upload api to yapi<br>
      <em>support dubbo api and api upload</em>
    ]]></description>

  <change-notes><![CDATA[
      1.0.0:<br>

      <em>Init project
      - Support request response arguments camel to underLine < br >

      1.0.2:<br>

      <em>Init project
      - Some bug fixed < br >

    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="UploadToXinYaApi" class="com.qbb.interaction.UploadToYapi" text="UploadToXinYaApi"
            description="UploadToXinYaApi">
      <add-to-group group-id="EditorLangPopupMenu" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt u"/>
    </action>
  </actions>

  <depends>com.intellij.modules.java</depends>

</idea-plugin>